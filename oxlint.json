{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "rules": {
    "max-len": ["error", { "code": 100 }],
    "no-unused-vars": "error",
    "no-console": "off",
    "prefer-const": "error",
    "eqeqeq": ["error", "always"],
    "no-debugger": "error",
    "semi": ["error", "always"],
    "quotes": ["error", "single", { "avoidEscape": true }]
  },
  "ignore": [
    "node_modules",
    "dist",
    "main.js",
    "*.config.mjs",
    "*.config.ts",
    "tests"
  ]
}